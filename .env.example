# Database Configuration
# Development: file:./prisma/dev.db
# Production: postgresql://user:password@host:5432/dbname
DATABASE_URL="postgresql://user:password@localhost:5432/inventory"

# JWT Configuration - CRITICAL: Generate strong random secret
# Run: openssl rand -base64 32
JWT_SECRET="generate-strong-random-secret-here"

# Environment
NODE_ENV="production"

# App Configuration - Set to your actual domain
NEXT_PUBLIC_API_URL="https://yourdomain.com"
CORS_ORIGIN="https://yourdomain.com"

# Security & Features
NEXT_PUBLIC_ENABLE_AUDIT_LOG="true"
NEXT_PUBLIC_ENABLE_BACKUPS="true"
