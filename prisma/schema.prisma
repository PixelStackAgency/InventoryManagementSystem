generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  role      String   @default("STAFF") // "SUPER_ADMIN" or "STAFF"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  permissions UserPermission[]
}

model Product {
  articleNumber String  @id
  name          String
  category      String?
  brand         String?
  purchasePrice Float
  sellingPrice  Float
  discountValue Float?  @default(0)
  discountType  String? @default("AMOUNT")
  taxEnabled    Boolean @default(false)
  taxPercent    Float   @default(0)
  quantity      Int     @default(0)
  minStock      Int     @default(0)
  unit          String? @default("pcs")
  shelfNumber   String?  // Optional shelf/storage location
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  PurchaseItems PurchaseItem[]
  SaleItems     SaleItem[]
}

model Supplier {
  id        Int      @id @default(autoincrement())
  name      String
  contact   String?
  createdAt DateTime @default(now())
  purchases Purchase[]
}

model Customer {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String?
  address   String?
  createdAt DateTime @default(now())
  sales     Sale[]
}

model Purchase {
  id             Int      @id @default(autoincrement())
  supplierId     Int?
  supplier       Supplier? @relation(fields: [supplierId], references: [id])
  invoiceNumber  String
  purchaseDate   DateTime @default(now())
  totalAmount    Float
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  items          PurchaseItem[]
}

model PurchaseItem {
  id            Int     @id @default(autoincrement())
  purchaseId    Int
  purchase      Purchase @relation(fields: [purchaseId], references: [id])
  productArtNo  String
  product       Product @relation(fields: [productArtNo], references: [articleNumber])
  quantity      Int
  purchasePrice Float
  total         Float
}

model Sale {
  id            Int      @id @default(autoincrement())
  invoiceNumber String   @unique
  saleDate      DateTime @default(now())
  customerId    Int?
  customer      Customer? @relation(fields: [customerId], references: [id])
  paymentMode   String
  subtotal      Float
  discount      Float
  totalAmount   Float
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  items         SaleItem[]
}

model SaleItem {
  id           Int     @id @default(autoincrement())
  saleId       Int
  sale         Sale    @relation(fields: [saleId], references: [id])
  productArtNo String
  product      Product @relation(fields: [productArtNo], references: [articleNumber])
  quantity     Int
  sellingPrice Float
  total        Float
}

model Permission {
  id          Int      @id @default(autoincrement())
  name        String   @unique  // "VIEW_PRICES", "VIEW_QUANTITIES", "VIEW_CLIENT_DETAILS", "VIEW_REPORTS", "MANAGE_PRODUCTS", "MANAGE_STOCK", "MANAGE_PURCHASES_SALES"
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  userPermissions UserPermission[]
}

model UserPermission {
  id           Int      @id @default(autoincrement())
  userId       Int
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  permissionId Int
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)
  granted      Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@unique([userId, permissionId])
}

model SystemSettings {
  id                    Int     @id @default(1)  // Singleton pattern
  businessName          String  @default("InventoryPro")
  businessType          String  @default("RETAILER")  // RETAILER, WHOLESALER, WAREHOUSE
  enableShelfLocation   Boolean @default(false)
  enableWarehouseMode   Boolean @default(false)
  currencySymbol        String  @default("â‚¹")
  enableBulkImport      Boolean @default(true)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}
